questão 1

algoritmo "Ciclo de Maquina de Lavar"

var
comando: inteiro
ciclo: inteiro

inicio
	
	repita
	escreval("Digite o numero 1 para iniciar os ciclos")
	escreval("Digite um número negativo para encerrar")
	leia(comando)

	se comando >= 0 então
	escreval("")
	escreval("Enchendo o tanque...")
	
	escreval("")
	para ciclo de 1 ate 3 faca
	escreval("Centrifugando ", ciclo, " de 3")
	fimpara

	escreval("")
	escreval("Ciclo Concluído! Roupas limpas.")

	fimse
	fimse

	ate comando < 0

fimalgoritmo

